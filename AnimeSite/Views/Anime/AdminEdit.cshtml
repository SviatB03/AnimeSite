@model AnimeSite.Models.AdminAnimeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="container-md">
    <div class="card shadow mb-4 rounded">
        <div class="card-body">
            <form asp-action="AdminEdit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Anime.AnimeId" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Anime.Title" class="control-label"></label>
                    <input asp-for="Anime.Title" class="form-control" />
                    <span asp-validation-for="Anime.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Anime.Description" class="control-label"></label>
                    <textarea asp-for="Anime.Description" class="form-control"></textarea>
                    <span asp-validation-for="Anime.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Anime.GenreId" class="control-label"></label>
                    <select asp-for="Anime.GenreId" class="form-control" asp-items="@(new SelectList(Model.Genres, "GenreId", "Name"))">
                        <option value="">-- Select Genre --</option>
                    </select>
                    <span asp-validation-for="Anime.GenreId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Current Image</label><br />
                    @if (!string.IsNullOrEmpty(Model.Anime.ImagePath))
                    {
                        <img src="@Url.Content(Model.Anime.ImagePath)" alt="Current Image" style="max-height: 200px;" />

                        <br />
                   
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" type="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="AdminIndex" class="btn btn-secondary">Back to List</a>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>
