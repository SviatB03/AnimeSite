@model IEnumerable<AnimeSite.Entity.Anime>

@{
    ViewData["Title"] = "Admin Anime List";
}

<div class="container-md">
    <div class="rounded-container">
        <h1>Admin Anime List</h1>

        <p>
            <a asp-action="AdminCreate" class="btn btn-success">Create New</a>
        </p>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="anime-card">
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@Url.Content(item.ImagePath)" alt="@item.Title" class="card-img-top" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                            <div class="btn-group" role="group">
                                <a asp-action="AdminEdit" asp-route-id="@item.AnimeId" class="btn btn-primary">Edit</a>
                                <a asp-action="AdminDelete" asp-route-id="@item.AnimeId" class="btn btn-danger">Delete</a>
                                <a asp-action="AdminAssignDate" asp-route-id="@item.AnimeId" class="btn btn-warning">Assign Date</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .rounded-container {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
    }

    .anime-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        margin-bottom: 20px;
        transition: transform 0.3s ease-in-out;
    }

        .anime-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .anime-card img {
            width: 100%;
            height: 400px;
            object-fit: cover;
        }
</style>
