@model AnimeViewModel
@{
    ViewData["Title"] = "Anime Releases";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimeSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .rounded-container {
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
        }

        .anime-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            overflow: hidden;
            margin-bottom: 20px;
            transition: transform 0.3s ease-in-out;
        }

            .anime-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .anime-card img {
                width: 100%;
                height: 400px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="rounded-container">
            <h2>Аніме релізи</h2>

            <form asp-controller="Anime" asp-action="Index" method="get" class="form-inline mb-3">
                <div class="row align-items-end">
                    <div class="col-md-3 mb-2">
                        <input type="text" name="searchString" value="@Model.SearchString" class="form-control" placeholder="Пошук за назвою" />
                    </div>
                    <div class="col-md-3 mb-2">
                        <select name="genreId" class="form-control">
                            <option value="">Всі жанри</option>
                            @if (Model.Genres != null)
                            {
                                @foreach (var genre in Model.Genres)
                                {
                                    <option value="@genre.GenreId" selected="@((Model.GenreId == genre.GenreId).ToString().ToLower())">@genre.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-2">
                        <input type="date" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                    <div class="col-md-2 mb-2">
                        <input type="date" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                    <div class="col-md-2 mb-2">
                        <input type="submit" value="Фільтрувати" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </form>

            <div class="row">
                @foreach (var anime in Model.Animes)
                {
                    <div class="col-md-3 mb-3">
                        <div class="anime-card">
                            @if (!string.IsNullOrEmpty(anime.ImagePath))
                            {
                                <img src="@Url.Content(anime.ImagePath)" alt="@anime.Title" class="card-img-top" />
                            }
                            else
                            {
                                <div class="card-img-top" style="height: 200px; background-color: #f0f0f0; display: flex; justify-content: center; align-items: center;">
                                    No Image
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@anime.Title</h5>
                                <p class="card-text">@anime.Description</p>
                                <p class="card-text"><small class="text-muted">@Model.Genres?.FirstOrDefault(g => g.GenreId == anime.GenreId)?.Name</small></p>
                                <p class="card-text"><small class="text-muted">Release Date: @(Model.ReleaseSchedules?.FirstOrDefault(rs => rs.AnimeId == anime.AnimeId)?.ReleaseDate.ToString("yyyy-MM-dd"))</small></p>

                                @if (Context.Session.GetInt32("UserId").HasValue)
                                {
                                    <form asp-area="" asp-controller="Anime" asp-action="AddToSaved" method="post">
                                        <input type="hidden" name="animeId" value="@anime.AnimeId" />
                                        <button type="submit" class="btn btn-primary btn-sm">Додати в збережене</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.Animes.Any())
                {
                    <div class="col-md-12">
                        <div class="alert alert-warning" role="alert">
                            Немає результатів для відображення.
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
