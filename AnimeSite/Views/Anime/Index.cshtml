@model AnimeViewModel
@{
    ViewData["Title"] = "Anime Releases";
}

<h2>Anime Releases</h2>

<form asp-controller="Anime" asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <input type="text" name="searchString" value="@Model.SearchString" class="form-control" placeholder="Search by title" />
    </div>
    <div class="form-group mr-2">
        <select name="genreId" class="form-control">
            <option value="">All Genres</option>
            @if (Model.Genres != null)
            {
                @foreach (var genre in Model.Genres)
                {
                    <option value="@genre.GenreId" selected="@((Model.GenreId == genre.GenreId).ToString().ToLower())">@genre.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group mr-2">
        <input type="date" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div class="form-group mr-2">
        <input type="date" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Filter" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Genre</th>
            <th>Release Date</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Animes != null)
        {
            @foreach (var anime in Model.Animes)
            {
                <tr>
                    <td>@anime.Title</td>
                    <td>@anime.Description</td>
                    <td>@(Model.Genres?.FirstOrDefault(g => g.GenreId == anime.GenreId)?.Name)</td>
                    <td>@(Model.ReleaseSchedules?.FirstOrDefault(rs => rs.AnimeId == anime.AnimeId)?.ReleaseDate.ToString("yyyy-MM-dd"))</td>
                    <td>
                        @if (!string.IsNullOrEmpty(anime.ImagePath))
                        {
                            <img src="@Url.Content(anime.ImagePath)" alt="@anime.Title" style="max-height: 100px;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>
                        @if (Context.Session.GetInt32("UserId").HasValue)
                        {
                            <form asp-area="" asp-controller="Anime" asp-action="AddToSaved" method="post">
                                <input type="hidden" name="animeId" value="@anime.AnimeId" />
                                <button type="submit" class="btn btn-primary">Додати в збережене</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No anime found.</td>
            </tr>
        }
    </tbody>
</table>
